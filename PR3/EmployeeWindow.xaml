    <Window x:Class="PR3.EmployeeWindow"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
            xmlns:local="clr-namespace:PR3"
            mc:Ignorable="d"
            Title="UserWindow" Height="450" Width="650"
            ResizeMode="NoResize" WindowStyle="None">
        <Grid Background="#FF2F2E2E">
            <DockPanel LastChildFill="False" VerticalAlignment="Top" Background="#FF3C2C62" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown" Height="35">
                <Label x:Name="lbExit" Content="X" Foreground="#FFD9D8D8" MouseDown="ldExit_MouseDown" FontWeight="Bold" FontSize="20" DockPanel.Dock="Right" Width="37"/>
                <Image DockPanel.Dock="Left" Source="/Redas.png" Width="55"/>
                <Label Content="Список сотрудников" Foreground="#FFD9D8D8" FontWeight="Bold" FontSize="20" Width="213"/>
                <Button Content="Распечатать сотрудников" HorizontalAlignment="Left" Margin="90,2,0,0" Click="PrintingList_Click"/>
            </DockPanel>
            <ScrollViewer x:Name="ScrollViewer1" VerticalScrollBarVisibility="Auto" Padding="10" Margin="0,40,0,0">

            </ScrollViewer>
        </Grid>
    </Window>
